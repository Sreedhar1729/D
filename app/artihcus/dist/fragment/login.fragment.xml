<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Dialog
        id="idLoginDialog"
        resizable="false"
        draggable="false"
        title="Login to your account"
        class="sapMPopover sapMIBar sapMHeader-CTX"
        beginButton="True"
    >
        <beginButton>
            <Button
                id="idCancelBtnInLoginDialog"
                text="Cancel"
                press="oncancelbtn"
            />
        </beginButton>
        <content>
            <form:SimpleForm
                id="idSimpleForm_LoginDialog"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="idVboxIn_LoginDialog"
                    class="loginFragmentVbox"
                    width="100%"
                >
                    <HBox id="idHboxIn_LoginDialog">
                        <Label
                            id="idLabelUserNameIn_LoginDialog"
                            class="sapUiTinyMarginTop"
                            text="User Name"
                            width="100px"
                        />
                        <Label
                            id="idSampleLabelUserNameIn_LoginDialog"
                            class="sapUiTinyMarginTop"
                            text=":"
                            width="20px"
                        />
                        <Input
                            id="idInputUserName"
                            placeholder="username"
                        />
                    </HBox>
                    <HBox id="idHbox2In_LoginDialog">
                        <Label
                            id="idLabelPwdIn_LoginDialog"
                            text="Password"
                            class="sapUiTinyMarginTop"
                            width="100px"
                        />
                        <Label
                            id="idSampleLabelPwdIn_LoginDialog"
                            text=":"
                            class="sapUiTinyMarginTop"
                            width="20px"
                        />
                        <Input
                            id="idInputPwdIn_LoginDialog"
                            placeholder="password"
                        />
                    </HBox>

                    <Button
                        id="idLoginBtnIn_LoginDialog"
                        class="sapUiSmallMarginTop"
                        type="Emphasized"
                        width="90%"
                        text="Login"
                        press="onLoginBtnPressInLoginDialog"
                    />

                    <HBox
                        id="idHbox1In_LoginDialog"
                        justifyContent="SpaceBetween"
                    >
                        <CheckBox
                            id="idCheckbox1In_LoginDialog"
                            text="Auto Save"
                            select="onSelectCheckBox"
                        />

                        <Link
                            id="idLinkChangepasswordIn_LoginDialogs"
                            text="Change Password"
                            press="onChangePasswordBtn"
                        />
                    </HBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>