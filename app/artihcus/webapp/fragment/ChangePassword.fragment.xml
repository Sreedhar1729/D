<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idChangePasswordDialog"
        class="boxContainer sapMPopover sapMIBar sapMHeader-CTX"
        title="Change Password"
    >
        <customHeader>
            <Bar id="idBar_CP">
                <contentMiddle>
                    <FlexBox
                        id="flexboxHeader_CP"
                        alignItems="Baseline"
                        justifyContent="Center"
                        width="100%"
                    >
                        <Text
                            id="_IDGenTextSAPLogon_CP"
                            text="Change Password"
                            class="sapMHeader-CTX1"
                        />
                    </FlexBox>
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CP"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1_CP"
                    class="connecttoSAPform sapUiMediumMargin"
                    width="80%"
                >
                    <Label
                        id="idUserLab_CP"
                        text="User"
                    />
                    <Input
                        id="idUserInput_CP"
                        value="{}"
                        placeholder=""
                        class="customInput"
                        width="100%"
                        editable="false"
                    />
                    <Label
                        id="idUserLabel_CP"
                        text="Current Password"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idSPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />
                    <Label
                        id="idNewPasswordlabel_CP"
                        text="New Password"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idNewPasswordInput_CP"
                        type="Password"
                        width="100%"
                        maxLength="8"
                    />
                    <Label
                        id="idRepeatPasswordlabel_CP"
                        text="Confirm Password"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idRepeatPasswordInput_CP"
                        type="Password"
                        width="100%"
                        maxLength="8"
                    />

                    <Button
                        id="ChangePwd_CP"
                        text="Change Password"
                        type="Emphasized"
                        width="100%"
                        press="onChangePasswordPress"
                        class="sapUiTinyMarginTop"
                    />
                    <VBox
                        id="idvboxCancelBtn_CP"
                        class="vboxCancelBtn"
                    >
                        <Button
                            id="IDbuttonchangepwcancel_CP"
                            class="changePasswordCancelBtn"
                            text="Cancel"
                            type="Transparent"
                            width="100%"
                            press="onPressCancelInChangePassword"
                        />
                    </VBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
