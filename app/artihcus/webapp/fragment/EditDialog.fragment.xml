<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idEditProductDssialog"
        resizable="true"
        draggable="true"
        contentWidth="20%"
        contentHeight="30%"
        title="Edit Product"
    >
        <beginButton>
            <Button
                id="idCreatssevgbhjkButton"
                text="Save"
                press="onSaveProduct"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancesslbnmButton"
                text="Cancel"
                press="onCancelInEditProductDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idStarDesstanmilsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="editIDLabel"
                    text="Product Number"
                    visible="false"
                />
                <Input
                    id="editIDInput"
                    value="{ProductModel>/ID}"
                    visible="false"
                />
                <Label
                    id="editProductNoLabel"
                    text="Product Number"
                />
                <Input
                    id="editProductNoInput"
                    value="{ProductModel>/sapProductno}"
                />

                <Label
                    id="editLengthLabel"
                    text="Length"
                />
                <Input
                    id="editproLengthInput"
                    
                    value="{ProductModel>/length}"
                />

                <Label
                    id="editWidthLabel"
                    text="Width"
                />
                <Input
                    id="editprodWidthInput"
                     value="{ProductModel>/width}"
                />

                <Label
                    id="editHeightLabel"
                    text="Height"
                />
                <Input
                    id="editprodHeightInput"
                   value="{ProductModel>/height}"
                />

                <Label
                    id="editUOMLabel"
                    text="Unit of Measure (UOM)"
                />
                <Input
                    id="editUOMInput"
                 value="{ProductModel>/uom}"
                />

                <Label
                    id="editCategoryLabel"
                    text="Product Category"
                />
                <Input
                    id="editCategoryInput"
                   value="{ProductModel>/mCategory}"
                />

                <Label
                    id="editDescriptionLabel"
                    text="Description"
                />
                <Input
                    id="editDescriptionInput"
                       value="{ProductModel>/description}"
                />

                <Label
                    id="editEANUPCLabel"
                    text="EAN/UPC Code"
                />
                <Input
                    id="editEANUPCInput"
                     value="{ProductModel>/EAN}"
                />

                <Label
                    id="editWeightLabel"
                    text="Weight"
                />
                <Input
                    id="editWeightInput"
                      value="{ProductModel>/weight}"
                />

                
                 <Label
                    id="editQuanLabel"
                    text="Quantity"
                />
                <Input
                    id="editQuanInput"
                   value="{ProductModel>/quantity}"
                /> 

            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>